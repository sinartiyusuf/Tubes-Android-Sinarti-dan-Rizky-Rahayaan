<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.user.masjidsamata.TambahData">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tambah Data Masjid"
        android:textAlignment="center"
        android:fontFamily="monospace"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="12sp"
        android:background="@drawable/edittext_data"
        android:layout_gravity="center"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama Masjid"
        android:id="@+id/nama"
        android:background="@drawable/edittext_data"
        android:layout_marginTop="12sp"
        android:fontFamily="monospace"
        android:textColorHint="@color/colorputih"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nomor Handphone "
        android:id="@+id/nh"
        android:background="@drawable/edittext_data"
        android:layout_marginTop="12sp"
        android:fontFamily="monospace"
        android:textColorHint="@color/colorputih"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email Masjid "
        android:id="@+id/em"
        android:background="@drawable/edittext_data"
        android:layout_marginTop="12sp"
        android:fontFamily="monospace"
        android:textColorHint="@color/colorputih"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="LatLng"
        android:id="@+id/latlng"
        android:background="@drawable/edittext_data"
        android:layout_marginTop="12sp"
        android:fontFamily="monospace"
        android:textColorHint="@color/colorputih"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tambah"
        android:layout_marginTop="12sp"
        android:background="@drawable/edittext_data"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:layout_marginLeft="10sp"/>
</LinearLayout>
