<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.user.masjidsamata.Tentang">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/masjid"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Aplikasi Masjid Samata ini adalah sebuah aplikasi yang dirancang khusus untuk memudahkan user atau pengguna menemukan masjid-masjid yang ada di wilayah Samata."
        android:textAlignment="center"
        android:fontFamily="monospace"
        android:textSize="25sp"/>
</LinearLayout>
